<h1>Dashboard</h1>

<div class="row">
  <div class="col-md-6">
    <div class="project-list">
      <% @projects.each do |project| %>
        <div class="project-list-row row">
          <div class="project-title col-md-8"><%= project.title %></div>
          <div class="project-edit col-md-2"><%= link_to 'Editar', edit_project_path(project) %></div>
          <div class="project-delete col-md-2"><%= link_to 'Excluir', project_path(project),
                    method: :delete,
                    data: { confirm: "Deseja excluir:" } %></div>
        </div>
        <ul>
          <% project.tasks.each do |task| %>
            <%= task.title %>
            <%= form_tag ('/projects/' + project.id.to_s + '/tasks/' + task.id.to_s + '/complete') do  %>
              <%= check_box "task", "isCompleted", { checked: task.isCompleted, "data-click-submits-form" => ""} %>
            <% end %>
            <%= link_to 'Editar', edit_project_task_path(project, task) %>
            <%= link_to 'Excluir', project_task_path(project, task),
                    method: :delete,
                    data: { confirm: "Deseja excluir:" } %>
          <% end %>
        </ul>

        <%= link_to 'Nova tarefa', new_project_task_path(project), class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>